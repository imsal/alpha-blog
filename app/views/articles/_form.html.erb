<% if @article.errors.any? %>
    <h2>The following errors prevented the article from being <%= yield(:error_message) %>. </h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
          <li id="error-message"><%= msg %></li>
      <% end %>
    </ul>
<% end %>


<%= form_for @article do |f| %>


    <p>
      <%= f.label :title %> <br />
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :description %> <br />
      <%= f.text_area :description %> <br /> <!-- text_area allows for a larger input text area -->
    </p>

    <p>
      <%= f.submit %>
    </p>



<% end %>

<%= link_to 'Back to Articles Listing', articles_path %>